<UserControl
    x:Class="SentIt.UserControls.SingleRowMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SentIt.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="40"
    d:Width="400"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="10,4"
                VerticalAlignment="Center"
                FontSize="8"
                Foreground="{StaticResource PrimaryHueLightBrush}"
                Text="{Binding Path=Author}" />
            <Border
                Grid.Column="1"
                Height="30"
                Background="Transparent"
                BorderBrush="{StaticResource PrimaryDarkBrush300}"
                BorderThickness=".5"
                CornerRadius="4">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="{StaticResource PrimaryOrangeToSecondaryOrange}"
                    Text="{Binding Message}" />

            </Border>
        </Grid>
    </Grid>
</UserControl>
